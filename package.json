{
  "name": "streaming-tools",
  "version": "1.0.0",
  "description": "some scripts for streaming",
  "main": "main.js",
  "scripts": {
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "start": "node main.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon main.js",
    "dev:client": "cd client && BROWSER=none npm start",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "chroma-js": "^2.1.0",
    "color-name-list": "^7.14.0",
    "color-space": "^1.16.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "get-image-colors": "^4.0.0",
    "node-fetch": "^2.6.1",
    "object-hash": "^2.0.3",
    "obs-websocket-js": "^4.0.2",
    "qs": "^6.9.4",
    "socket.io": "^2.3.0",
    "twitch-bot": "^1.3.5",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  }
}
